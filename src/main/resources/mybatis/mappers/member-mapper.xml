<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTO Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.office.springdeploy.member.MemberMapper">

	<select id="isMember" 
			parameterType="String" 
			resultType="Boolean">
	
		SELECT 
			COUNT(*) 
		FROM 
			TBL_MEMBER 
		WHERE 
			M_ID = #{m_id}
			
	</select>

	<insert id="insertMember" 
			parameterType="com.office.springdeploy.member.MemberDto">
	
		INSERT INTO 
			TBL_MEMBER(M_ID, M_PW, M_MAIL, M_PHONE, M_PROFILE_THUM) 
		VALUES(#{m_id}, #{m_pw}, #{m_mail}, #{m_phone}, #{m_profile_thum})
	
	</insert>
	
	<select id="selectMemberForLogin" 
			parameterType="com.office.springdeploy.member.MemberDto" 
			resultType="com.office.springdeploy.member.MemberDto">
	
		SELECT 
			* 
		FROM 
			TBL_MEMBER 
		WHERE 
			M_ID = #{m_id}
	
	</select>
	
	<select id="getLoginedMemberByMId" 
			parameterType="String" 
			resultType="com.office.springdeploy.member.MemberDto">
	
		SELECT 
			* 
		FROM 
			TBL_MEMBER 
		WHERE 
			M_ID = #{m_id}
		
	</select>
	
	<update id="updateMemberForModify" 
			parameterType="com.office.springdeploy.member.MemberDto">
	
		UPDATE 
			TBL_MEMBER 
		SET 
			M_MAIL = #{m_mail}, 
			M_PHONE = #{m_phone}, 
			<if test="m_profile_thum != null">
				M_PROFILE_THUM = #{m_profile_thum}, 
			</if>
			M_MOD_DATE = NOW() 
		WHERE 
			M_NO = #{m_no}
	
	</update>
	
	<delete id="deleteMemberByMId" 
			parameterType="String">
	
		DELETE FROM 
			TBL_MEMBER 
		WHERE 
			M_ID = #{m_id}
	
	</delete>
	
	<select id="selectMemberByMId" 
			parameterType="String" 
			resultType="com.office.springdeploy.member.MemberDto">
	
		SELECT 
			* 
		FROM 
			TBL_MEMBER 
		WHERE 
			M_ID = #{m_id}
	
	</select>
	
</mapper>